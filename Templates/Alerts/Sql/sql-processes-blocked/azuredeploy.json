{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "type": "string",
            "metadata": {
                "description": "Name of the alert"
            }
        },
        "alertLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of the alert"
            }
        },
        "dataSourceId": {
            "type": "string",
            "metadata": {
                "description": "Workspace id"
            }
        },
        "actionGroupId": {
            "type": "string",
            "metadata": {
                "description": "Action group id"
            }
        },
        "alertThreshold": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "Threshold to use for alert evaluation"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('alertName')]",
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "location": "[parameters('alertLocation')]",
            "properties": {
                "description": "Fires when blocked SQL processes are detected at least three 5-minute windows over the previous 30 minutes",
                "enabled": "true",
                "source": {
                    "query": "InsightsMetrics | where Namespace =~ \"sqlserver_performance\" | extend Tags = todynamic(Tags) | extend Name = tostring(Tags.counter), Database = strcat(Tags.sql_instance, \"/\", Tags.database_name, \" monitored by \", Computer) | where Name =~ \"Processes blocked\" | summarize AggregatedValue = avg(Val) by bin(TimeGenerated, 5m), Database", 
                    "dataSourceId": "[parameters('dataSourceId')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 30
                },
                "action": {
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "4",
                    "aznsAction": {
                        "actionGroup": [
                            "[parameters('actionGroupId')]"
                        ],
                        "emailSubject": "SQL: Blocked processes detected"
                    },
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": "[parameters('alertThreshold')]",
                        "metricTrigger": {
                            "thresholdOperator": "GreaterThan",
                            "threshold": 3,
                            "metricTriggerType": "Consecutive",
                            "metricColumn": "Database"
                        }
                    }
                }
            }
        }
    ]
}