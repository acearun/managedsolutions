{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "type": "string",
            "metadata": {
                "description": "Name of the alert"
            }
        },
        "alertLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of the alert"
            }
        },
        "dataSourceId": {
            "type": "string",
            "metadata": {
                "description": "Workspace id"
            }
        },
        "actionGroupId": {
            "type": "string",
            "metadata": {
                "description": "Action group id"
            }
        },
        "alertThreshold": {
            "type": "string",
            "defaultValue": "0",
            "metadata": {
                "description": "Threshold to use for alert evaluation"
            }
        }
    },
    "variables": {
        "alertThreshold": "[if(equals(parameters('alertThreshold'), ''), '0', parameters('alertThreshold'))]"
    },
    "resources": [
        {
            "name": "[parameters('alertName')]",
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "location": "[parameters('alertLocation')]",
            "properties": {
                "description": "Fires when pending memory grants are detected at least three 5-minute windows over the previous 30 minutes",
                "enabled": "true",
                "source": {
                    "query": "[concat('InsightsMetrics | where Namespace =~ \"sqlserver_performance\" | extend Tags = todynamic(Tags) | extend Name = tostring(Tags.counter), Database = tostring(Tags.database_name), Instance = tostring(Tags.sql_instance) | where Name =~ \"Memory Grants Pending\" | summarize Value = sum(Val) by bin(TimeGenerated, 5m), Computer | where Value > ', variables('alertThreshold'), ' | summarize Count = count() by Computer | where Count >= 3')]",
                    "dataSourceId": "[parameters('dataSourceId')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 30
                },
                "action": {
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "4",
                    "aznsAction": {
                        "actionGroup": [
                            "[parameters('actionGroupId')]"
                        ],
                        "emailSubject": "SQL: Pending memory grants detected"
                    },
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 0
                    }
                }
            }
        }
    ]
}