{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "alertName": {
            "type": "string"
        },
        "alertLocation": {
            "type": "string"
        },
        "dataSourceId": {
            "type": "string"
        },
        "actionGroupId": {
            "type": "string"
        },
        "alertThreshold": {
            "type": "string",
            "defaultValue": "0"
        },
        "alertOperator": {
            "type": "string",
            "allowedValues": [
                "Equals",
                "NotEquals",
                "GreaterThan",
                "GreaterThanOrEqual",
                "LessThan",
                "LessThanOrEqual"
            ]
        },
        "alertMetricThreshold": {
            "type": "string",
            "defaultValue": "0"
        },
        "alertMetricOperator": {
            "type": "string",
            "allowedValues": [
                "Equals",
                "NotEquals",
                "GreaterThan",
                "GreaterThanOrEqual",
                "LessThan",
                "LessThanOrEqual"
            ]
        },
        "alertMetricType": {
            "type": "string"
        },
        "alertMetricColumn": {
            "type": "string"
        },
        "alertQuery": {
            "type": "string"
        },
        "alertDescription": {
            "type": "string"
        },
        "profileId": {
            "type": "string"
        },
        "alertTemplateTag": {
            "type": "string"
        }
    },
    "resources": [
        {
            "name": "[parameters('alertName')]",
            "type": "Microsoft.Insights/scheduledQueryRules",
            "apiVersion": "2018-04-16",
            "tags": {
                "profile-id": "[parameters('profileId')]",
                "alert-template-tag": "[parameters('alertTemplateTag')]",
                "metricTriggerType": "[parameters('alertMetricType')]",
                "thresholdOperator": "[parameters('alertMetricOperator')]",
                "threshold": "[parameters('alertMetricThreshold')]",
                "metricColumn": "[parameters('alertMetricColumn')]"
            },
            "location": "[parameters('alertLocation')]",
            "properties": {
                "description": "[parameters('alertDescription')]",
                "enabled": "true",
                "source": {
                    "query": "[parameters('alertQuery')]",
                    "dataSourceId": "[parameters('dataSourceId')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 30
                },
                "action": {
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction",
                    "severity": "4",
                    "aznsAction": {
                        "actionGroup": [
                            "[parameters('actionGroupId')]"
                        ],
                        "emailSubject": "[concat('Alert Triggered', parameters('alertName'))]"
                    },
                    "trigger": {
                        "thresholdOperator": "[parameters('alertOperator')]",
                        "threshold": "[parameters('alertThreshold')]"
                    }
                }
            }
        }
    ]
}