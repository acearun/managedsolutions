{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmLocation": {
            "type": "string"
        },
        "vaultName": {
            "type": "string"
        },
        "vaultLocation": {
            "type": "string"
        },
        "vmSubscription": {
            "type": "string"
        },
        "vmResourceGroup": {
            "type": "string"
        }
    },
    "variables": {
        "vmTemplateLink": "https://raw.githubusercontent.com/acearun/managedsolutions/master/Templates-Dcr/msi-reference9/msideploy.json"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "monitoringVmSetupTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('vmName')]"
                    },
                    "vmLocation": {
                        "value": "[parameters('vmLocation')]"
                    },
                    "vmSubscription": {
                        "value": "[parameters('vmSubscription')]"
                    },
                    "vmResourceGroup": {
                        "value": "[parameters('vmResourceGroup')]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('vmName'), '-access-policy')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.KeyVault/vaults/accessPolicies",
                            "name": "[concat(parameters('vaultName'), '/add')]",
                            "apiVersion": "2019-09-01",
                            "location": "[parameters('vaultLocation')]",
                            "properties": {
                                "accessPolicies": [
                                    {
                                        "tenantId": "[subscription().tenantId]",
                                        "objectId": "[reference('monitoringVmSetupTemplate').outputs.managedIdentityObjectId.value]",
                                        "permissions": {
                                            "keys": [],
                                            "secrets": [ "get" ],
                                            "certificates": [],
                                            "storage": []
                                        }
                                    }
                                ]
                            },
                            "dependsOn": [
                                "[resourceId('Microsoft.Resources/deployments', 'monitoringVmSetupTemplate')]"
                            ]
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
    }
}