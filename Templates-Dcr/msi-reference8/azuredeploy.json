{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmLocation": {
            "type": "string"
        },
        "vaultName": {
            "type": "string"
        },
        "vaultLocation": {
            "type": "string"
        },
        "vaultSubscription": {
            "type": "string"
        },
        "vaultLResourceGroup": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-10-01",
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[parameters('vmLocation')]",
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "name": "[uniqueString(resourceGroup().id, 'key-vault-access')]",
            "type": "Microsoft.Resources/deployments",
            "subscriptionId": "[parameters('vaultSubscription')]",
            "resourceGroup": "[parameters('vaultLResourceGroup')]",
            "apiVersion": "2020-06-01",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [

                        {
                            "type": "Microsoft.KeyVault/vaults/accessPolicies",
                            "name": "[concat(parameters('vaultName'), '/add')]",
                            "apiVersion": "2019-09-01",
                            "location": "[parameters('vaultLocation')]",
                            "properties": {
                                "accessPolicies": [
                                    {
                                        "tenantId": "[subscription().tenantId]",
                                        "objectId": "[reference(resourceId('microsoft.compute/virtualmachines', parameters('vmName')), '2019-03-01', 'full').identity.principalId]",
                                        "permissions": {
                                            "keys": [],
                                            "secrets": [ "get" ],
                                            "certificates": [],
                                            "storage": []
                                        }
                                    }
                                ]
                            },
                            "dependsOn": [
                                "[resourceId('microsoft.compute/virtualmachines', parameters('vmName'))]"
                            ]
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "managedIdentityObjectId": {
            "type": "string",
            "value": "[reference(resourceId('microsoft.compute/virtualmachines', parameters('vmName')), '2019-03-01', 'full').identity.principalId]"
        }
    }
}