{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dcrName": {
            "type": "string"
        },
        "dcrLocation": {
            "type": "string"
        },
        "insight": {
            "type": "string"
        },
        "destinationName": {
            "type": "string"
        },
        "dataSource": {
            "type": "string",
            "defaultValue": "DataSource1",
            "metadata": {
                "description": "Name of the data source"
            }
        },
        "workspaceResourceId": {
            "type": "string"
        },
        "workspaceId": {
            "type": "string"
        },
        "serializedTelegrafConfig": {
            "type": "string",
            "metadata": {
                "description": "Telegraf config"
            }
        }
    },
    "variables": {
        "vmSolutionLink": "https://azmonsolutions.blob.core.windows.net/workloadinsights/vminsightsolution.json"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "vmSolutionNestedTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vmSolutionLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "omsWorkspaceId": {
                        "value": "[parameters('workspaceResourceId')]"
                    },
                    "workspaceRegion": {
                        "value": "[parameters('dcrLocation')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Insights/dataCollectionRules",
            "name": "[parameters('dcrName')]",
            "location": "[parameters('dcrLocation')]",
            "apiVersion": "2019-11-01-preview",
            "tags": {
                "monitoring-insight": "[parameters('insight')]"
            },
            "properties": {
                "dataSources": {
                    "extensions": [
                        {
                            "name": "[parameters('dataSource')]",
                            "stream": "Microsoft-InsightsMetrics",
                            "extensionName": "WorkloadInsights",
                            "extensionSettings": {
                                "id": "[parameters('insight')]",
                                "type": "Telegraf",
                                "format": "toml",
                                "value": "[parameters('serializedTelegrafConfig')]"
                            }
                        }
                    ]
                },
                "destinations": {
                    "logAnalytics": [
                        {
                            "workspaceResourceId": "[parameters('workspaceResourceId')]",
                            "workspaceId": "[parameters('workspaceId')]",
                            "name": "[parameters('destinationName')]"
                        }
                    ]
                },
                "dataFlows": [
                    {
                        "streams": [
                            "Microsoft-InsightsMetrics",
                            "Microsoft-OperationLog"
                        ],
                        "destinations": [
                            "[parameters('destinationName')]"
                        ]
                    }
                ],
                "alertPacks": [
                    {
                        "name": "Microsoft",
                        "alertTemplates": [
                            {
                                "name": "Processes blocked",
                                "description": "Fired when the number of blocked processes exceeds a threshold",
                                "uniqueTag": "sql-processes-blocked",
                                "recommendationLevel": 2,
                                "applyTo": [],
                                "alertTemplate": {
                                    "type": "log-threshold",
                                    "metricNamespace": "sqlserver_performance",
                                    "metricName": "Processes blocked",
                                    "thresholdOperator": ">",
                                    "defaultThreshold": 0.0
                                }
                            },
                            {
                                "name": "Deadlocks per second",
                                "description": "Fired when the rate of deadlocks in SQL exceeds a threshold",
                                "uniqueTag": "sql-deadlocks-per-second",
                                "recommendationLevel": 2,
                                "applyTo": [],
                                "alertTemplate": {
                                    "type": "log-threshold",
                                    "metricNamespace": "sqlserver_performance",
                                    "metricName": "Number of deadlocks/sec",
                                    "thresholdOperator": ">",
                                    "defaultThreshold": 0.0
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ],
    "outputs": {
        "dataCollectionRuleId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Insights/dataCollectionRules', parameters('dcrName'))]"
        }
    }
}